<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.silver.krish.schedulr">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".AddClassActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".EditClassActivity">
        </activity>
        <activity android:name=".ClassDetailActivity">
        </activity>
        <activity android:name=".AssignmentDetailActivity">
        </activity>
        <activity android:name=".AddAssignmentActivity"
            android:windowSoftInputMode="adjustResize">
        </activity>
    </application>

</manifest>