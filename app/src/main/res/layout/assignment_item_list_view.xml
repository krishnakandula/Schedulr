<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/assignment_list_item_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_component_grid_lists_padding_big"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:minHeight="?attr/listPreferredItemHeight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/assignment_list_view_description"
            style="@style/GridLayoutItemView"
            android:gravity="center_vertical"
            android:text="TASK"
            android:textSize="@dimen/grid_item_title_text_size"></TextView>

        <TextView
            android:id="@+id/assignment_list_view_title"
            style="@style/GridLayoutItemView"
            android:layout_below="@id/assignment_list_view_description"
            android:text="DESCRIPTION" />

        <TextView
            android:id="@+id/assignment_list_view_due_date"
            style="@style/GridLayoutItemView"
            android:layout_below="@id/assignment_list_view_title"
            android:layout_marginBottom="@dimen/material_component_cards_supporting_text_top_padding"
            android:text="DUE_DATE" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
