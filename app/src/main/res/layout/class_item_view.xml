<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/class_item_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_component_grid_lists_padding_big"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:minHeight="?attr/listPreferredItemHeight">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/class_item_subject_text_view"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="SUBJECT"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/class_item_class_number_text_view"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/class_item_subject_text_view"
            android:text="CLASS_NUMBER"
            android:textSize="20dp" />

        <View
            android:id="@+id/class_item_color_view"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/color_circle_diameter"
            android:layout_height="@dimen/color_circle_diameter"
            android:src="@drawable/circle"/>
        <View
            android:id="@+id/cardview_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/md_divider_black"
            android:layout_below="@id/class_item_class_number_text_view"
            />

        <TextView
            android:id="@+id/class_item_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview_divider"
            android:text="CLASS_NAME"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/class_item_teacher_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/class_item_view_title"
            android:layout_marginBottom="10dp"
            android:text="TEACHER" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
