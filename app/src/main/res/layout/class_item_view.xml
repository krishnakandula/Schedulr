<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?android:listPreferredItemHeight">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/listPreferredItemHeight"
        android:layout_margin="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/class_item_subject_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="SUBJECT"
                android:textSize="25dp"
                style="@style/TextAppearance.AppCompat.Title"
                />
            <TextView
                android:id="@+id/class_item_class_number_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/class_item_subject_text_view"
                android:textSize="25dp"
                android:layout_marginLeft="5dp"
                android:text="CLASS_NUMBER"
                style="@style/TextAppearance.AppCompat.Title"/>
            <TextView
                android:id="@+id/class_item_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/class_item_class_number_text_view"
                android:text="CLASS_NAME"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/class_item_teacher_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/class_item_view_title"
                android:text="TEACHER"
                android:layout_marginBottom="10dp"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>