<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
    </style>
    
    <!-- fragment_add_class styles -->
    <style name="add_class_linear_layout_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">100</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="GridLayoutItemView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/material_component_cards_supporting_text_top_padding</item>
        <item name="android:layout_marginTop">@dimen/material_component_cards_supporting_text_top_padding</item>
        <item name="android:layout_marginEnd">@dimen/material_component_cards_supporting_text_top_padding</item>
    </style>

    <style name="TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/material_component_grid_lists_padding_big</item>
    </style>

    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:textStyle"></item>
    </style>

    <style name="ActionBarTextColor" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AddFragmentAssignmentLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">100</item>
        <item name="android:layout_marginLeft">@dimen/edit_text_input_margin</item>
        <item name="android:layout_marginRight">@dimen/edit_text_input_margin</item>
    </style>
</resources>
